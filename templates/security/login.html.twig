{% extends 'base.html.twig' %}

{% block title %}Logowanie - 10x Cards{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-lightbulb-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="fw-bold mt-3">Witaj ponownie!</h2>
                        <p class="text-muted">Zaloguj się do swojego konta</p>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            Nieprawidłowy email lub hasło
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Adres email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="email" 
                                       class="form-control" 
                                       id="inputEmail" 
                                       name="_username" 
                                       value="{{ last_username }}" 
                                       required 
                                       autofocus
                                       placeholder="twoj@email.com">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Hasło</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input type="password" 
                                       class="form-control" 
                                       id="inputPassword" 
                                       name="_password" 
                                       required
                                       placeholder="Twoje hasło">
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">
                            <label class="form-check-label" for="rememberMe">
                                Zapamiętaj mnie
                            </label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Zaloguj się
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-0">Nie masz jeszcze konta?</p>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-primary mt-2">
                            <i class="bi bi-person-plus"></i> Zarejestruj się
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

