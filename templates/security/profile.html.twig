{% extends 'base.html.twig' %}

{% block title %}Mój profil - 10x Cards{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Back to Dashboard -->
            <div class="mb-4">
                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left me-2"></i>Powrót do Dashboard
                </a>
            </div>

            <!-- Profile Card -->
            <div class="card shadow-lg mb-4">
                <div class="card-body p-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px; font-size: 2rem;">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <div class="ms-4">
                            <h2 class="mb-1">{{ app.user.email }}</h2>
                            <p class="text-muted mb-0">
                                <i class="bi bi-shield-check text-success"></i> Konto aktywne
                            </p>
                        </div>
                    </div>

                    <hr>

                    <h4 class="mb-3">
                        <i class="bi bi-info-circle text-primary me-2"></i>Informacje o koncie
                    </h4>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">
                                    <i class="bi bi-envelope"></i> Email
                                </div>
                                <div class="fw-semibold">{{ app.user.email }}</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">
                                    <i class="bi bi-shield-lock"></i> Role
                                </div>
                                <div class="fw-semibold">
                                    {% for role in app.user.roles %}
                                        <span class="badge bg-primary">{{ role }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">
                                    <i class="bi bi-calendar"></i> Data utworzenia
                                </div>
                                <div class="fw-semibold">{{ app.user.createdAt|date('d.m.Y H:i') }}</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">
                                    <i class="bi bi-clock-history"></i> Ostatnia aktualizacja
                                </div>
                                <div class="fw-semibold">{{ app.user.updatedAt|date('d.m.Y H:i') }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats Card -->
            <div class="card shadow-lg">
                <div class="card-body p-4">
                    <h4 class="mb-4">
                        <i class="bi bi-graph-up text-primary"></i> Twoje statystyki
                    </h4>
                    
                    <div class="row text-center g-3">
                        <div class="col-md-4">
                            <div class="card bg-light border-0">
                                <div class="card-body p-3">
                                    <div class="display-5 text-primary">{{ total_flashcards }}</div>
                                    <div class="text-muted small">Fiszek</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light border-0">
                                <div class="card-body p-3">
                                    <div class="display-5 text-success">{{ total_repetitions }}</div>
                                    <div class="text-muted small">Powtórek</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light border-0">
                                <div class="card-body p-3">
                                    <div class="display-5 text-info">{{ ai_generated }}</div>
                                    <div class="text-muted small">AI Generated</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    // Save JWT token to localStorage when profile loads
    {% if jwt_token is defined %}
        window.JWTAuth.setToken('{{ jwt_token }}');
        console.log('JWT token saved to localStorage');
    {% endif %}
</script>
{% endblock %}

